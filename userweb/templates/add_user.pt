<!DOCTYPE html>
<html lang="en">
<head>
    <title>${name}</title>
</head>
<body>
<div metal:use-macro='load:nav.pt'></div>

<h1>${name}:</h1>

<form tal:condition="added== False" action="${url}" method="post">
    <label for="user_id">Login ID</label>
    <input type="user" id="user_id"
           name="user_id"
           id="user_id"
           value="${user_id}"/><br/>

    <label for="user_name">Name</label>
    <input type="user" id="user_name"
           name="user_name"
           value="${user_name}"/><br/>

    <label for="user_password">Password</label>
    <input type="password" id="user_password"
           name="user_password"
           value="${user_password}"/><br/>

    <div tal:omit-tag tal:condition="permission['admin'] and groups">

    <label for="user_primary_group">Primary Group</label>
    <select name="user_primary_group" id="user_primary_group">
        <div tal:omit-tag tal:repeat="group groups">
            <option value="None" tal:attributes="value group.gid" tal:content="group.cn"/>
        </div>
    </select>
    <br/>
    <label for="user_secondary_group">Secondary Groups</label>
    <select name="user_secondary_groups" id="user_secondary_groups" multiple>
        <div tal:omit-tag tal:repeat="group groups">
            <option value="None" tal:attributes="value group.gid" tal:content="group.cn"/>
        </div>
    </select>
    <br/>

    </div>
    <label for="auth_password">Authentication Password</label>
    <input type="password" id="auth_password"
           name="auth_password"
           value="${auth_password}"/><br/>
    <input type="submit" name="form.submitted"
           value="Add User"/>
</form>
</body>
</html>
